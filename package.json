{
  "name": "desmodder",
  "description": "Supercharge your Desmos graph creation and sharing experience with many convenient features",
  "version": "0.10.1",
  "author": {
    "name": "Jared Hughes"
  },
  "browserslist": "defaults",
  "eslintIgnore": [
    "dist/*.js"
  ],
  "scripts": {
    "build": "node ./esbuild.mjs --browser=chrome",
    "build-ff": "node ./esbuild.mjs --browser=firefox",
    "dev": "node ./esbuild.mjs --watch --browser=chrome",
    "dev-ff": "node ./esbuild.mjs --watch --browser=firefox",
    "prettier": "npm run fix:prettier",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix src",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "lint": "npm run lint:formatting && npm run lint:types && npm run lint:eslint",
    "lint:formatting": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint src",
    "test": "npm run test:jest",
    "test:jest": "jest --config jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DesModder/DesModder"
  },
  "devDependencies": {
    "@desmodder/graph-state": "^0.2.3",
    "@lezer/generator": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/babel__core": "^7.1.19",
    "@types/babel__standalone": "^7.1.4",
    "@types/babel__template": "^7.4.1",
    "@types/chrome": "0.0.197",
    "@types/jest": "^28.1.4",
    "esbuild": "^0.17.2",
    "esbuild-plugin-copy": "^2.0.1",
    "esbuild-plugin-less": "^1.1.12",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "less": "^4.1.1",
    "minimist-lite": "^2.2.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.4.2",
    "@codemirror/commands": "^6.2.2",
    "@codemirror/language": "^6.6.0",
    "@codemirror/lint": "^6.2.0",
    "@codemirror/search": "^6.3.0",
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.9.3",
    "@ffmpeg/core": "^0.10.0",
    "@ffmpeg/ffmpeg": "^0.10.0",
    "@fluent/bundle": "^0.17.1",
    "@lezer/common": "^1.0.1",
    "@lezer/lr": "^1.2.3",
    "@types/desmos": "^1.6.0",
    "idb-keyval": "^6.2.0",
    "js-tokens": "^8.0.0",
    "prettier": "^2.7.1"
  }
}
